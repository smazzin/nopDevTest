@* Configure.cshtml *@
@model Nop.Plugin.Misc.ProductWarranty.Areas.Admin.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="Warranty" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="Enabled_OverrideForStore" asp-input="Enabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="Enabled" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Enabled" />
                        <span asp-validation-for="Enabled"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="DisplayWarrantyOnProductPage_OverrideForStore" asp-input="DisplayWarrantyOnProductPage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="DisplayWarrantyOnProductPage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DisplayWarrantyOnProductPage" />
                        <span asp-validation-for="DisplayWarrantyOnProductPage"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <div class="buttons">
                            <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-default">
            <div class="card-header">
                @T("Plugins.Misc.ProductWarranty.WarrantyCategories")
            </div>
            <div class="card-body">
                <p>
                    <a asp-action="Categories" class="btn btn-primary">
                        @T("Plugins.Misc.ProductWarranty.WarrantyCategories.Manage")
                    </a>
                </p>
            </div>
        </div>
        <div class="card card-default">
            <div class="card-header">
                @T("Plugins.Misc.ProductWarranty.WarrantyMappings")
            </div>
            <div class="card-body">
                <p>
                    <a asp-action="ProductWarrantyMappings" class="btn btn-primary">
                        @T("Plugins.Misc.ProductWarranty.WarrantyMappings.Manage")
                    </a>
                </p>
            </div>
        </div>
    </div>
</form>